<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape android:shape="rectangle">
            <!--make a gradient background-->

            <!--apply a border around button-->
            <stroke android:color="#008d4c"
                android:width="2dp" />


            <!-- make the button corners rounded-->
            <corners  android:radius="4px" />
        </shape>
    </item>
    <item>
        <shape>

            <stroke
                android:width="1px"
                android:color="#d73925" />
            <corners
                android:radius="4px" />
            <solid android:color="#d64f4b"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>