<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/toolbar_base" />

    <include layout="@layout/ui_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:scrollbarThumbVertical="@drawable/scrollbar_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_blue"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textTitle"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginRight="@dimen/dp_7"
                    android:text="@string/textDetails"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/buttonstylepink"
                        android:text="@string/learnmore"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/buttonstyle2"
                        android:text="@string/jointheclube"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="20dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/FirstName"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="5.0dip"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="@color/color_grey_600"
                        android:textSize="12.0dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:hint="@string/FirstName"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/LastName"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="5.0dip"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="@color/color_grey_600"
                        android:textSize="12.0dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/edit_text_background"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/LastName"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/EmailSingup"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="5.0dip"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="@color/color_grey_600"
                        android:textSize="12.0dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/edit_text_background"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/EmailSingup"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/Phone"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="5.0dip"
                        android:singleLine="true"
                        android:text="*"
                        android:textColor="@color/color_grey_600"
                        android:textSize="12.0dip"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/edit_text_background"
                    android:drawableLeft="@drawable/ic_smartphone_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/Phone"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Price Range: "
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/txt_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="$0 - $1000"
                        android:textSize="15sp"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:theme="@style/MySeekBarTheme"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/dp_5"
                    />

               <!-- <SeekBar
                    android:id="@+id/custom_seekbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progressDrawable="@drawable/custom_progress"
                    android:thumb="@mipmap/thumb"
                    android:visibility="gone"
                    />
-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_purchase_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_purchase_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_preapproved_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_preapproved"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_credit_type"
                    android:textSize="@dimen/sp_15"/>


                <EditText
                    android:id="@+id/et_credit_scroe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/buyer_credit_type"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/buyer_property_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_property_type"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/country"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_country"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/state"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/city"
                    android:textSize="@dimen/sp_15"/>

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/city"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/Zipcode"
                    android:textSize="@dimen/sp_15"/>

                <EditText
                    android:id="@+id/et_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/Zipcode"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:textColor="@color/color_grey_600"
                    android:textColorHint="@color/color_grey_500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_bedroom_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_bedrooms"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_bathroom_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_bathroom"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_basement_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_basement"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_garage_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_garage"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_style_type"
                    android:textSize="@dimen/sp_15"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/buyer_exterior_type"
                    android:textSize="@dimen/sp_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background">

                    <Spinner
                        android:id="@+id/sp_buy_exterior"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:popupBackground="@drawable/spinner_bg"
                        android:spinnerMode="dropdown" />

                </LinearLayout>


                <Button
                    android:id="@+id/btn_property_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonstylepink"
                    android:text="@string/submit"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>